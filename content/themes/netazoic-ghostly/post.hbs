{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customiZe it to behave differently if you prefer. }}

<main >
    {{#post}}
        <article class="{{post_class}} single">
   		<div class="{{post_class}}" >
         {{#has tag="nav"}}
        	{{! no titles no nav pages}}
        {{else}}
        <header>
            <h2>{{{title}}}</h2>
        </header>        
        {{/has}}
        {{! Everything inside the #post tags pulls data from the post }}
        {{#if image}}
	    <div class="column1-nimg post" style="background-image: url({{image}})"></div>
	    {{/if}}
        {{content}}
        </div>

    {{/post}}
    </article>
</main>

